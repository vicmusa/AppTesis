<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/recycler">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/bluelite"
        >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="left"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="Victor Castillo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/arrowRecycler"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.2"
            android:gravity="end"
            app:lottie_colorFilter="@color/white"
            app:lottie_rawRes="@raw/arrow"></com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            tools:text="90"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
        </TextView>
        <TextView
            android:id="@+id/tvSpo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            tools:text="90"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
        </TextView>
        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            tools:text="90"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUI VA TODO LO REFERENTE AL PACIENTE QUE NO ES NECESARIA MOSTRAR SIEMPRE"
            android:textSize="40sp">

        </TextView>
    </LinearLayout>
</LinearLayout>

